<!-- src/public/views/all-users.hbs -->
<div class="mdl-layout mdl-js-layout mdl-color--grey-100">
  <main class="mdl-layout__content">
    <div class="mdl-card mdl-shadow--6dp">
      <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
        <h2 class="mdl-card__title-text">Welcome {{ data.admin.email }}!</h2>
      </div>
      <div class="mdl-card__supporting-text">
              <p class="mdl-card__subtitle-text mdl-typography--text-right">Logged like {{ data.admin.roles }}</p>
        <table>
         <thead>
            <tr>
              <th class = "mdl-data-table__cell--non-numeric">Email</th>
              <th>Roles</th>
              <th>Verified</th>
            </tr>
         </thead>

         <tbody>
            {{#each data.users}}
               <tr id="{{ this.id }}">
                <td class = "mdl-data-table__cell--non-numeric"> {{ this.email }} </td>
                <td> {{ this.roles }} </td>
                <td> {{ this.verified }} </td>
               </tr>
            {{/each}}
         </tbody>
        </table>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button" href='/v1/auth/logout'>Log Out</a>
        </div>
      </div>
    </div>
  </main>
</div>
